{
  "name": "vite-plugin-chunk-name",
  "version": "0.1.1",
  "description": "A Vite plugin to customize the name of chunk files.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc --watch && node dist/index.js",
    "start": "tsc && node dist/index.js",
    "build": "rollup -c rollup.config.js",
    "lint": "eslint  \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint-staged": "lint-staged",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "prepare": "husky"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "vite",
    "plugin",
    "rollup",
    "chunk-name"
  ],
  "author": {
    "name": "Topskys",
    "email": "loranbo@163.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Topskys/vite-plugin-chunk-name.git"
  },
  "bugs": {
    "url": "https://github.com/Topskys/vite-plugin-chunk-name/issues"
  },
  "license": "MIT",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.5.2",
    "conventional-changelog": "^7.1.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rollup": "^4.51.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  }
}
